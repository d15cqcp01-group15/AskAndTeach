<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".courseDetail.CourseDetailActivity">

    <ImageView
        android:src="@drawable/avatar"
        android:id="@+id/ivCourse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvName"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/ivCourse"
        app:layout_constraintTop_toTopOf="@+id/ivCourse"
        app:layout_constraintBottom_toBottomOf="@+id/ivCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvHocPhiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hoc phi:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCourse" />


    <TextView
        android:text="1000000"
        android:layout_marginLeft="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvHocPhiLabel"
        app:layout_constraintLeft_toRightOf="@+id/tvHocPhiLabel"
        android:id="@+id/tvPriceClassDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/tvPriceClassDetail"
        android:id="@+id/tvSkillLabel"
        android:text="Kỹ Năng:"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvSkillLabel"
        app:layout_constraintLeft_toRightOf="@+id/tvSkillLabel"
        android:id="@+id/tvSkillClassDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvTimeLabel"
        android:text="Thoi gian:"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHocPhiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvTimeClassDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/tvTimeLabel"
        app:layout_constraintLeft_toRightOf="@+id/tvTimeLabel" />


    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvCityLabel"
        android:text="Thành Phố :"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tvCityLabel"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvCityLabel"
        android:id="@+id/tvCityClassDetail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvDistrictLabel"
        android:text="Quận :"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCityClassDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tvDistrictLabel"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDistrictLabel"
        android:id="@+id/tvDistrictClassDetail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvDescriptionLabel"
        android:text="Chi tiết:"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDistrictClassDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="jlkfjalkdf kdljafkl dlkafjkldfja lfdjkdljfkldjfkdjaflkdjlfajlkdajfk"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tvDescriptionLabel"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDescriptionLabel"
        android:id="@+id/tvDescriptionClassDetail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionClassDetail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btnRegisterCourse"
        android:text="Dang ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>